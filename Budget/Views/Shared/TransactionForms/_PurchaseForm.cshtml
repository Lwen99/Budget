@model TransactionsViewModel


<h1>Create</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Transactions" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="AccountId" type="hidden" />
            <input asp-for="TransactionTypes" type="hidden"/>
            <span asp-validation-for="AccountId" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="@Model.SelectedCategoryId" class="control-label"></label>
                <select asp-for="@Model.SelectedCategoryId" asp-items="@Model.Categories.CategoriesDropDown" class="form-control">
                    <option disabled selected>-Select a Category</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description" class="control-label"></label>
                <input asp-for="@Model.Description" class="form-control" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Amount" class="control-label"></label>
                <input asp-for="@Model.Amount" class="form-control" />
                <span asp-validation-for="@Model.Amount" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

